<div class="m-3">
    <h3 class="inline-block rounded-md bg-blue-500 text-2xl text-white w-full py-2 px-3 text-center">Shinobi List</h3>
    <div class="tables mt-10">
        <table class="table-fixed w-full text-center rounded-xl shadow-md">
            <tr class="mb-5 bg-blue-300 py-2 text-gray-800 w-full">
                <th class="py-3 my-3">Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Clan</th>
                <th>Chakra Nature</th>
                <th>Active</th>
                <th></th>
            </tr>
            <% let i = 1 %>
            <% data.forEach((item)=> { %>
                <tr class="even:bg-white hover:bg-yellow-100 odd:bg-blue-100 py-2 my-2">
                    <td> <%= i++ %></td>
                    <td class="py-3">
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.age %>
                    </td>
                    <td>
                       <%= item.clan %>
                    </td>
                    <td>
                        <%= item.cn %>
                    </td>
                    <td>
                        <%= item.active %>
                    </td>
                    <td class="flex items-center content-center justify-center mt-2">
                        <form action="/shinobi/update/<%= item.id %>" method="get">
                            <button type="submit">
                                <i class="text-blue-500 mx-2 text-xl fa-solid fa-pen-to-square"></i>
                            </button>
                        </form>

                        <form action="/shinobi/delete/<%= item.id %>" method="post">
                            <button type="submit">
                                <i class="text-red-500 mx-2 text-xl fa-solid fa-trash-can"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            <%  }) %>
        </table>
    </div>
</div>