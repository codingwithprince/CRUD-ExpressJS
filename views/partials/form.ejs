<div class="m-3">
    <h3 class="inline-block rounded-md bg-red-500 text-2xl text-white w-full py-2 px-3 text-center">Add Shinobi</h3>
    <div class="form">
        <form action="/shinobi" method="post">
            <div class="mt-3">
                <label class="block mb-2 px-2" for="name">Name</label>
                <input class="w-full py-3 px-2 focus:outline-none shadow-md border-2 border-gray-200 rounded" type="text" placeholder="Shinobi Name" name="name" id="">
            </div>
            <div class="mt-3">
                <label class="block mb-2 px-2" for="name">Age</label>
                <input class="w-full py-3 px-2 focus:outline-none shadow-md border-2 border-gray-200 rounded" type="number" placeholder="Shinobi Age" name="age" id="">
            </div>
            <div class="mt-3">
                <label class="block mb-2 px-2" for="name">Clan</label>
                <input class="w-full py-3 px-2 focus:outline-none shadow-md border-2 border-gray-200 rounded" type="text" placeholder="Shinobi Clan" name="clan" id="">
            </div>
            <div class="mt-3">
                <label class="block mb-2 px-2" for="name">Chakra Nature</label>
                <input class="w-full py-3 px-2 focus:outline-none shadow-md border-2 border-gray-200 rounded" type="text" placeholder="Shinobi Chakra Nature" name="cn" id="">
            </div>
            <div class="mt-3">
                <label class="block mb-2 px-2" for="name">Active</label>
                <select id="countries" name="active" class="w-full focus:outline-none shadow-md py-3 px-2 border-2 border-gray-200 text-gray-900 text-sm block w-full">
                    <option selected>true</option>
                    <option value="false">false</option>
                  </select>
                <!-- <input class="w-full py-3 px-2 focus:underline-none shadow-md border-2 border-gray-200 rounded" type="radio" placeholder="Shinobi Age" name="age" id=""> -->
            </div>
            <div class="mt-10">
                <input type="submit" value="Submit" class="bg-blue-500 hover:bg-blue-400 px-5 py-2 text-white rounded">
            </div>
        </form>
    </div>
</div>